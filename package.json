{
  "name": "@lop-town/bprogress",
  "version": "0.0.1",
  "private": true,
  "keywords": [
    "nprogress",
    "progress",
    "bar",
    "bprogress",
    "next.js",
    "react"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "docs:dev": "pnpm pnpm --filter docs dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "husky install",
    "prepare": "husky"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "prettier": "^3.2.5",
    "turbo": "^2.5.0",
    "typescript": "5.5.4"
  },
  "packageManager": "bun@1.2.23",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@changesets/cli": "^2.28.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "@swc/core",
    "core-js",
    "core-js-pure",
    "docs",
    "unrs-resolver"
  ]
}
