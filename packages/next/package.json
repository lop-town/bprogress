{
  "name": "@lop-town/bprogress-next",
  "version": "3.2.12",
  "type": "module",
  "description": "NProgress bar like for Next.js compatible with new app directory",
  "repository": {
    "type": "git",
    "url": "https://github.com/lop-town/bprogress/tree/main/packages/next"
  },
  "bugs": {
    "url": "https://github.com/lop-town/bprogress/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./app": {
      "types": "./dist/app.d.ts",
      "import": "./dist/app.js",
      "require": "./dist/app.cjs"
    },
    "./pages": {
      "types": "./dist/pages.d.ts",
      "import": "./dist/pages.js",
      "require": "./dist/pages.cjs"
    }
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "build": "tsup",
    "dev": "tsup --watch",
    "pub:release": "bun publish --no-git-checks --access public",
    "pub:canary": "bun publish --no-git-checks --tag canary --access public",
    "pub:beta": "bun publish --no-git-checks --tag beta --access public",
    "prepublishOnly": "bun run lint && bun run build"
  },
  "keywords": [
    "next",
    "next nprogress",
    "next bprogress",
    "next progress",
    "react",
    "nprogress",
    "bprogress",
    "progress bar",
    "progress bar app directory",
    "app directory",
    "pages directory"
  ],
  "author": "lop-town",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.10.16",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "eslint": "^9.19.0",
    "eslint-config-next": "^15.1.6",
    "next": "^15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@lop-town/bprogress-core": "^1.3.4",
    "@lop-town/bprogress-react": "^1.2.7"
  }
}
