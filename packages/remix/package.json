    "@types/react-dom": "^19.0.2",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "eslint": "^9.19.0",
    "eslint-config-next": "^15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
