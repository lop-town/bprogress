{
  "name": "@lop-town/bprogress-remix",
  "version": "1.0.19",
  "description": "NProgress bar like for Remix",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/lop-town/bprogress/tree/main/packages/remix"
  },
  "bugs": {
    "url": "https://github.com/lop-town/bprogress/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
