{
  "name": "@lop-town/bprogress-vue",
  "version": "1.1.5",
  "type": "module",
  "description": "Utility to create your own NProgress bar like with Vue",
  "repository": {
    "type": "git",
    "url": "https://github.com/lop-town/bprogress/tree/main/packages/vue"
  },
  "bugs": {
    "url": "https://github.com/lop-town/bprogress/issues"
  },
  "main": "./dist/index.es.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "build": "vite build",
    "dev": "vite build --watch",
